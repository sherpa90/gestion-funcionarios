# COPIA ESTE ARCHIVO A .env Y COMPLETA CON TUS VALORES REALES
# IMPORTANTE: Genera una clave secreta segura con:
# python -c "import secrets; print(secrets.token_hex(50))"

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1]
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# Database Configuration
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=sgpal_db
SQL_USER=sgpal_user
SQL_PASSWORD=your-secure-password
SQL_HOST=db
SQL_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Sentry Configuration (opcional - no enviar PII)
SENTRY_DSN=

# Security - Development
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Health Check - Development only
HEALTH_CHECK_DETAILED=True
