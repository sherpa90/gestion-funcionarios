# =============================================================================
# SGPAL - CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================
# IMPORTANTE: Este archivo contiene información sensible.
# NUNCA lo subas a repositorios públicos.

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# SECRET KEY - CRÍTICA PARA SEGURIDAD
# Genera una nueva con: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=django-insecure-prod-key-replace-with-secure-random-key-123456789012345678901234567890

# DEBUG - SIEMPRE False en producción
DEBUG=False

# ALLOWED HOSTS - Dominios permitidos para acceder a la aplicación
# Incluye tu dominio principal y subdominios
DJANGO_ALLOWED_HOSTS=tramites.losalercespuertomontt.cl,www.tramites.losalercespuertomontt.cl,losalercespuertomontt.cl,localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Engine de base de datos (PostgreSQL para producción)
SQL_ENGINE=django.db.backends.postgresql

# Nombre de la base de datos
SQL_DATABASE=sgpal_production

# Usuario de base de datos (NO uses 'postgres' o 'root')
SQL_USER=sgpal_prod_user

# CONTRASEÑA MUY SEGURA para la base de datos
# Usa al menos 16 caracteres, mezcla de mayúsculas, minúsculas, números y símbolos
SQL_PASSWORD=ProdSecurePass2024!@#$%^&*()

# Host de la base de datos (nombre del contenedor en Docker)
SQL_HOST=sgpal-db

# Puerto de PostgreSQL
SQL_PORT=5432

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Backend de email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Servidor SMTP (Gmail recomendado para inicio)
EMAIL_HOST=smtp.gmail.com

# Puerto SMTP (587 para TLS, 465 para SSL)
EMAIL_PORT=587

# Usar TLS (recomendado sobre SSL)
EMAIL_USE_TLS=True

# NO usar SSL si usas TLS
EMAIL_USE_SSL=False

# Tu email de Gmail
EMAIL_HOST_USER=tu-empresa@gmail.com

# App Password de Gmail (NO tu contraseña normal)
# Cómo obtener: https://support.google.com/accounts/answer/185833
EMAIL_HOST_PASSWORD=tu-app-password-de-16-caracteres

# Email que aparece como remitente
DEFAULT_FROM_EMAIL=noreply@tu-dominio.com

# =============================================================================
# SECURITY SETTINGS - PRODUCCIÓN
# =============================================================================

# Cookies seguras (solo HTTPS)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Headers de seguridad adicionales
SECURE_HSTS_SECONDS=31536000  # 1 año
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Timeout de sesiones (1 hora)
SESSION_COOKIE_AGE=3600
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# Timeout de reset de contraseña (24 horas)
PASSWORD_RESET_TIMEOUT=86400

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry DSN (opcional pero recomendado)
# Obtén gratis en: https://sentry.io/
SENTRY_DSN=

# Nivel de logging
LOG_LEVEL=INFO

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache backend (usando Redis si tienes, sino locmem)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Slack webhook para notificaciones (opcional)
SLACK_WEBHOOK_URL=

# API Keys para servicios externos (si usas)
GOOGLE_ANALYTICS_ID=
GOOGLE_RECAPTCHA_SECRET_KEY=

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Configuración de backups automáticos
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Todos los días a las 2 AM

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Configuraciones específicas de tu aplicación
COMPANY_NAME=Tu Empresa Ltda.
COMPANY_RUT=12.345.678-9
SUPPORT_EMAIL=soporte@tu-dominio.com

# Límites de archivos
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,xlsx,xls,jpg,jpeg,png

# =============================================================================
# DEVELOPMENT OVERRIDES (temporal, quitar en producción final)
# =============================================================================

# Si necesitas debug temporal, cambia a True pero RECUERDA cambiar a False
# DEBUG=False